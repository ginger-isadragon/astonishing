{% comment %}
  Age Verification Modal for Wine & Spirits Stores

  This section creates a modal popup that requires visitors to verify
  they are of legal drinking age before accessing the store.
{% endcomment %}

{% if section.settings.enable_age_verification %}
  <div class="age-verification-modal" id="age-verification-modal" role="dialog" aria-modal="true" aria-labelledby="age-verification-title">
    <div class="age-verification-overlay"></div>
    <div class="age-verification-content">
      {% if section.settings.logo_image %}
        <div class="age-verification__logo">
          <img src="{{ section.settings.logo_image | image_url: width: 200 }}" alt="{{ shop.name }}" loading="eager">
        </div>
      {% endif %}

      <h2 id="age-verification-title" class="age-verification__title">
        {{ section.settings.heading }}
      </h2>

      {% if section.settings.message != blank %}
        <div class="age-verification__message">
          {{ section.settings.message }}
        </div>
      {% endif %}

      <div class="age-verification__form">
        <p class="age-verification__question">{{ section.settings.question }}</p>

        <div class="age-verification__buttons">
          <button type="button" class="age-verification__button age-verification__button--yes" id="age-verify-yes">
            {{ section.settings.yes_button_text }}
          </button>
          <button type="button" class="age-verification__button age-verification__button--no" id="age-verify-no">
            {{ section.settings.no_button_text }}
          </button>
        </div>
      </div>

      {% if section.settings.show_remember %}
        <div class="age-verification__remember">
          <label>
            <input type="checkbox" id="age-remember" checked>
            {{ section.settings.remember_text }}
          </label>
        </div>
      {% endif %}

      <div class="age-verification__warning" id="age-warning" hidden>
        <p>{{ section.settings.warning_message }}</p>
      </div>

      {% if section.settings.footer_text != blank %}
        <div class="age-verification__footer">
          {{ section.settings.footer_text }}
        </div>
      {% endif %}
    </div>
  </div>
{% endif %}

{% stylesheet %}
  .age-verification-modal {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 10000;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s, visibility 0.3s;
  }

  .age-verification-modal.active {
    opacity: 1;
    visibility: visible;
  }

  .age-verification-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.9);
  }

  .age-verification-content {
    position: relative;
    max-width: 500px;
    width: 90%;
    background: var(--color-background);
    padding: 3rem 2rem;
    border-radius: 8px;
    text-align: center;
    animation: slideIn 0.3s ease-out;
  }

  @keyframes slideIn {
    from {
      transform: translateY(-30px);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  .age-verification__logo {
    margin-bottom: 1.5rem;
  }

  .age-verification__logo img {
    max-width: 150px;
    height: auto;
    margin: 0 auto;
  }

  .age-verification__title {
    font-size: 1.75rem;
    margin-bottom: 1rem;
    color: var(--color-foreground);
  }

  .age-verification__message {
    color: #666;
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .age-verification__question {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    color: var(--color-foreground);
  }

  .age-verification__buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    margin-bottom: 1.5rem;
  }

  .age-verification__button {
    padding: 1rem 2rem;
    border: 2px solid var(--color-foreground);
    background: transparent;
    color: var(--color-foreground);
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    border-radius: var(--style-border-radius-inputs);
    transition: all 0.3s;
    min-width: 120px;
  }

  .age-verification__button--yes:hover {
    background: var(--color-foreground);
    color: var(--color-background);
  }

  .age-verification__button--no {
    border-color: #c00;
    color: #c00;
  }

  .age-verification__button--no:hover {
    background: #c00;
    color: white;
  }

  .age-verification__remember {
    margin-bottom: 1rem;
  }

  .age-verification__remember label {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: #666;
    cursor: pointer;
  }

  .age-verification__remember input[type="checkbox"] {
    width: 18px;
    height: 18px;
    cursor: pointer;
  }

  .age-verification__warning {
    background: #ffebee;
    border: 1px solid #c00;
    color: #c00;
    padding: 1rem;
    border-radius: var(--style-border-radius-inputs);
    margin-top: 1rem;
  }

  .age-verification__footer {
    font-size: 0.75rem;
    color: #999;
    margin-top: 1.5rem;
    line-height: 1.5;
  }

  @media (max-width: 768px) {
    .age-verification-content {
      padding: 2rem 1.5rem;
    }

    .age-verification__title {
      font-size: 1.5rem;
    }

    .age-verification__buttons {
      flex-direction: column;
    }

    .age-verification__button {
      width: 100%;
    }
  }
{% endstylesheet %}

{% javascript %}
  class AgeVerification {
    constructor() {
      this.modal = document.getElementById('age-verification-modal');
      if (!this.modal) return;

      this.yesButton = document.getElementById('age-verify-yes');
      this.noButton = document.getElementById('age-verify-no');
      this.rememberCheckbox = document.getElementById('age-remember');
      this.warning = document.getElementById('age-warning');
      this.cookieName = 'age_verified';
      this.cookieExpireDays = 30;

      this.init();
    }

    init() {
      // Check if user has already verified
      if (!this.hasVerified()) {
        this.showModal();
      }

      // Event listeners
      if (this.yesButton) {
        this.yesButton.addEventListener('click', () => this.handleYes());
      }

      if (this.noButton) {
        this.noButton.addEventListener('click', () => this.handleNo());
      }

      // Prevent body scroll when modal is open
      if (!this.hasVerified()) {
        document.body.style.overflow = 'hidden';
      }
    }

    showModal() {
      if (this.modal) {
        this.modal.classList.add('active');
      }
    }

    hideModal() {
      if (this.modal) {
        this.modal.classList.remove('active');
        document.body.style.overflow = '';
      }
    }

    handleYes() {
      const remember = this.rememberCheckbox ? this.rememberCheckbox.checked : true;

      if (remember) {
        this.setVerificationCookie();
      }

      this.hideModal();
      this.hideWarning();
    }

    handleNo() {
      this.showWarning();
      // Optionally redirect to a different page
      // setTimeout(() => {
      //   window.location.href = '/pages/age-restricted';
      // }, 2000);
    }

    showWarning() {
      if (this.warning) {
        this.warning.removeAttribute('hidden');
      }
    }

    hideWarning() {
      if (this.warning) {
        this.warning.setAttribute('hidden', '');
      }
    }

    hasVerified() {
      return this.getCookie(this.cookieName) === 'true';
    }

    setVerificationCookie() {
      const date = new Date();
      date.setTime(date.getTime() + (this.cookieExpireDays * 24 * 60 * 60 * 1000));
      const expires = 'expires=' + date.toUTCString();
      document.cookie = this.cookieName + '=true;' + expires + ';path=/;SameSite=Lax';
    }

    getCookie(name) {
      const nameEQ = name + '=';
      const ca = document.cookie.split(';');
      for (let i = 0; i < ca.length; i++) {
        let c = ca[i];
        while (c.charAt(0) === ' ') c = c.substring(1, c.length);
        if (c.indexOf(nameEQ) === 0) return c.substring(nameEQ.length, c.length);
      }
      return null;
    }
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => new AgeVerification());
  } else {
    new AgeVerification();
  }
{% endjavascript %}

{% schema %}
{
  "name": "Age Verification",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_age_verification",
      "label": "Enable age verification",
      "default": true,
      "info": "Require visitors to confirm they are of legal drinking age"
    },
    {
      "type": "image_picker",
      "id": "logo_image",
      "label": "Logo image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Age Verification Required"
    },
    {
      "type": "richtext",
      "id": "message",
      "label": "Message",
      "default": "<p>This website contains alcohol and is only suitable for those 21 years or older.</p>"
    },
    {
      "type": "text",
      "id": "question",
      "label": "Question",
      "default": "Are you 21 years of age or older?"
    },
    {
      "type": "text",
      "id": "yes_button_text",
      "label": "Yes button text",
      "default": "Yes, I am"
    },
    {
      "type": "text",
      "id": "no_button_text",
      "label": "No button text",
      "default": "No, I'm not"
    },
    {
      "type": "checkbox",
      "id": "show_remember",
      "label": "Show 'remember me' option",
      "default": true
    },
    {
      "type": "text",
      "id": "remember_text",
      "label": "Remember me text",
      "default": "Remember me for 30 days"
    },
    {
      "type": "text",
      "id": "warning_message",
      "label": "Under age warning message",
      "default": "Sorry, you must be of legal drinking age to enter this site."
    },
    {
      "type": "richtext",
      "id": "footer_text",
      "label": "Footer disclaimer",
      "default": "<p>By entering this site you are agreeing to the Terms of Use and Privacy Policy.</p>"
    }
  ]
}
{% endschema %}
